<!DOCTYPE html>
<html>

<head>
    <title>
        <%=title%>
    </title>

    <script src="https://kit.fontawesome.com/6bdcc90d77.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
</head>

<body>
    <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>
        My Contact List
    </h1>

    <div>
        <!-- <ul>
                <%for (let i of contact_list ){%>
                    <li id="item">
                        <p id="name"><%=i.name%></p>
                        <p id="phone"><%=i.phone%></p>
                    </li>
                    
                <%}%>
            </ul> -->

        <table class="table table-dark" id="tab">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Phone No.</th>
                </tr>
            </thead>
            <tbody>
                <%for (let i of contact_list ){%>
                    <tr class="row1">
                        <td><%=i.name%></td>
                        <td><%=i.phone%></td>
                        <td class="delete"><a href="/delete-contact/<%= i._id%>"> <i class="fa-solid fa-rectangle-xmark"></i></a></td>
                      </tr>


                <%}%>
            </tbody>

        </table>
    </div>

    <!--action specified is very important there is a app.get('/create-contact') in index.js which adds the contact-->
    <form action="/create-contact" method="POST" id="form">
        <!--action signify where to send the data when we submit-->
        <input type="text" name="my_name" placeholder="Enter Name" required>
        <input type="number" name="my_phone" placeholder="Enter Phone" required>

        <!-- <button type="submit">Add Contact </button> -->
        <button type="submit" class="btn btn-secondary">Add Contact</button>

    </form>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>

</html>